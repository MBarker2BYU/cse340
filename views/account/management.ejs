<% if (title) { %>
<h1><%= title %></h1>
<% } else { res.redirect('/') } %>

<%- messages() %>

<% if (errors) { %>
<ul class="message warning">
  <% errors.array().forEach(error => { %>
  <li><%= error.msg %></li>
  <%  }) %>
</ul>
<% } %>

<h2>Welcome <%= accountData.account_firstname %> <%= accountData.account_lastname %></h2>
<p>You're logged in.</p>
<h3>Account Type: <%= accountData.account_type  %></h3>

<button class="price-watch-remove" onclick="location.href='/account/profile/<%= accountData.account_id %>'">Edit Account Information</button>

<h3>Manage Your Price Watches</h3>
<button class="price-watch-add" onclick="location.href='/price-watch/'">View Price Watches</button>

<% if(accountData.account_type != 'Client'){ %>
  <h3>Inventory Management</h3>  
  <button class="price-watch-remove" onclick="location.href='/inv/'">Manage Inventory</button>
<% } %>